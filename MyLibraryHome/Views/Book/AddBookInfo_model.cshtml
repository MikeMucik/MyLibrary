@model MyLibraryMVC.Application.ViewModels.BookInfo.NewBookInfoVm
@*@Html.EditorFor(model => model, new { htmlAttributes = new { @id = "BookInfo" } })
	*@

<div class="form-group">
	<input type="hidden" asp-for="Id" name="BookInfo.Id" class="form-control" data-info-field="Id" />
</div>
<div class="form-group">
	<label asp-for="NumberOfPages" class="control-label">Liczba stron</label>
	<input asp-for="NumberOfPages" name="BookInfo.NumberOfPages" class="form-control" data-info-field="NumberOfPages" />
	<span asp-validation-for="NumberOfPages" class="text-danger"></span>
</div>
<div class="form-group">
	<label asp-for="NumberOfChapter" class="control-label">Liczba rozdziałów</label>
	<input asp-for="NumberOfChapter" name="BookInfo.NumberOfChapter" class="form-control" data-info-field="NumberOfChapter" />
	<span asp-validation-for="NumberOfChapter" class="text-danger"></span>
</div>
<div class="form-check">
	<input asp-for="Illustration" name="BookInfo.Illustration" class="form-check-input" type="checkbox" data-info-field="Illustration" />
	<label class="form-check-label" asp-for="Illustration">Ilustracje</label>
</div>
<div class="form-group">
	<label asp-for="Binding" class="control-label">Oprawa</label>
	<input asp-for="Binding" name="BookInfo.Binding" class="form-control" data-info-field="Binding" />
	<span asp-validation-for="Binding" class="text-danger"></span>
</div>
<div class="form-group">
	<label asp-for="Subtitle" class="control-label">Podtytuł</label>
	<input asp-for="Subtitle" name="BookInfo.Subtitle" class="form-control" data-info-field="Subtitle" />
	<span asp-validation-for="Subtitle" class="text-danger"></span>
</div>
<div class="form-group">
	<label asp-for="AgeGroupId" class="control-label">Grupa wiekowa</label>
	<select asp-for="AgeGroupId" name="BookInfo.AgeGroupId" class="form-control" data-info-field="AgeGroupId" asp-items="ViewBag.AgeGroups"></select>
	<span asp-validation-for="AgeGroupId" class="text-danger"></span>
</div>


