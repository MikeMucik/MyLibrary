@model MyLibraryMVC.Application.ViewModels.Book.NewBookVm


<div class="form-group">
	<input type="hidden" asp-for="BookInfo.Id" class="form-control" />
</div>
<div class="form-group">
	<label asp-for="BookInfo.NumberOfPages" class="control-label">Liczba stron</label>
	<input asp-for="BookInfo.NumberOfPages" class="form-control" />
	<span asp-validation-for="BookInfo.NumberOfPages" class="text-danger"></span>
</div>
<div class="form-group">
	<label asp-for="BookInfo.NumberOfChapter" class="control-label">Liczba rodziałów</label>
	<input asp-for="BookInfo.NumberOfChapter" class="form-control" />
	<span asp-validation-for="BookInfo.NumberOfChapter" class="text-danger"></span>
</div>
<div class="form-check">
	<input asp-for="BookInfo.Illustration" class="form-check-input" type="checkbox" />
	<label class="form-check-label" for="BookInfo.Illustration">Ilustracje</label>
</div>
<div class="form-group">
	<label asp-for="BookInfo.Binding" class="control-label">Oprawa</label>
	<input asp-for="BookInfo.Binding" class="form-control" />
	<span asp-validation-for="BookInfo.Binding" class="text-danger"></span>
</div>
<div class="form-group">
	<label asp-for="BookInfo.Subtitle" class="control-label">Podtytuł</label>
	<input asp-for="BookInfo.Subtitle" class="form-control" />
	<span asp-validation-for="BookInfo.Subtitle" class="text-danger"></span>
</div>
<div class="form-group">
	<label asp-for="BookInfo.AgeGroupId" class="control-label">Grupa wiekowa</label>
	<select asp-for="BookInfo.AgeGroupId" class="form-control" asp-items="ViewBag.AgeGroups"></select>
	<span asp-validation-for="BookInfo.AgeGroupId" class="text-danger"></span>
</div>


